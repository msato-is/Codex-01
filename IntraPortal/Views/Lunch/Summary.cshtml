@model IEnumerable<IntraPortal.Controllers.LunchController.LunchSummaryRow>
@{
  ViewData["Title"] = "お弁当集計";
}
<div class="d-flex justify-content-between align-items-center mb-2">
  <h5>今日の集計</h5>
  <a class="btn btn-outline-secondary" href="/Lunch/Csv">CSVエクスポート</a>
  </div>
<table class="table table-sm">
  <thead><tr><th>コード</th><th>メニュー</th><th>価格</th><th>数量</th><th>金額</th></tr></thead>
  <tbody>
  @foreach (var r in Model){
    <tr><td>@r.Code</td><td>@r.Name</td><td>@r.Price</td><td>@r.Quantity</td><td>@r.Total</td></tr>
  }
  </tbody>
</table>

